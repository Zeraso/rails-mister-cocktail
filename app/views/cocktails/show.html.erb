<h1><%=  @cocktail.name %></h1>
<p>Find me in app/views/cocktails/show.html.erb</p>
<div>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to 'Delete ingredient', dose_path(dose),
    method: :delete,
    data: { confirm: "Are you sure?"} %>
  </li>
  <% end %>
</ul>
</div>



<%= simple_form_for([@cocktail, @dose]) do |f| %>
<%= f.input :ingredient, collection: Ingredient.order(:name), prompt:"Pick one from list" %>
<%= f.input :description %>
<%= f.submit "Submit", class: "btn btn-primary m-2" %>

<% end %>

<%= link_to 'Homepage', cocktails_path, class: "btn btn-primary m-2" %>

